<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edw.kotlinappframework.ui.RxjavaLearnActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_rxturn"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:text="倒计时3s跳转"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_rxdelay"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:text="延时3s跳转"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_rxturn" />

        <Button
            android:id="@+id/btn_thread_change"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:text="线程切换"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_rxdelay"
            app:layout_goneMarginTop="15dp" />

        <TextView
            android:id="@+id/tv_show_thread"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btn_thread_change" />
        <Button
            android:id="@+id/btn_antiShake"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:text="结合Rxjava的按键防抖动点击"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_show_thread" />
        <Button
            android:id="@+id/btn_rxretrofit"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:text="结合Retrofit网络请求"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_antiShake" />

        <ImageView
            android:id="@+id/iv_rxretrofit"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_rxretrofit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
